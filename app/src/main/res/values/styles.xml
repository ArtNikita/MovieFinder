<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MovieItemTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/extra_small_margin_or_padding</item>
        <item name="android:layout_marginEnd">@dimen/extra_small_margin_or_padding</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="MovieItemTextView.Name">
        <item name="android:textSize">@dimen/movie_item_card_view_name_text_view_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/extra_small_margin_or_padding</item>
    </style>

    <style name="MovieItemTextView.Description">
        <item name="android:textSize">@dimen/movie_item_card_view_description_text_view_text_size</item>
    </style>
</resources>